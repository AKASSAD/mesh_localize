<launch>
        <!-- Start full Gazebo GUI -->
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="world_name" value="$(find map_localize)/worlds/campus.world"/>
	</include>

        <!-- Start only gzserver 
	<arg name="world_name" default="$(find map_localize)/worlds/campus.world"/>
	<node name="gazebo" pkg="gazebo_ros" type="gzserver" respawn="false" output="screen"  args="$(arg world_name)" />-->

        <!-- Start map_localize_node -->
	<node name="map_localize" pkg="map_localize" type="map_localize_node" output="screen">
		<remap from="virtual_caminfo" to="/kinect/camera_info" />
		<remap from="virtual_image" to="/kinect/image_raw" />
		<remap from="virtual_depth" to="/kinect/depth/image_raw" />

		<param name="point_cloud_filename" type="string" value="$(find map_localize)/bin/map_points.pcd"/>
		<param name="mesh_filename" type="string" value="$(find map_localize)/bin/map.stl"/>
		<param name="load_descriptors" type="bool" value="true"/>
		<param name="descriptor_filename" type="string" value="$(find map_localize)/data/ASiftKeypointsAndDescriptors_lowres2.bin"/>
	</node>
</launch>
